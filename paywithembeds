  <script>
    // -------- PAYPAL BUTTON --------
    paypal.Buttons({
      style: {
        layout: 'vertical',
        shape: 'rect',
      },
      createOrder: function(data, actions) {
        // Set up transaction details here or via your server
        return actions.order.create({
          purchase_units: [{
            amount: { value: '10.00' } // Change to your amount
          }]
        });
      },
      onApprove: function(data, actions) {
        return actions.order.capture().then(function(details) {
          alert('Transaction completed by ' + details.payer.name.given_name);
        });
      }
    }).render('#paypal-button-container');


    // -------- STRIPE BUTTON --------
    const stripe = Stripe('pk_test_YourPublicKeyHere'); // Replace with your Stripe public key
    document.getElementById('stripe-button').addEventListener('click', () => {
