<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Secure Checkout</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <script src="https://www.paypal.com/sdk/js?client-id=YOUR_PAYPAL_CLIENT_ID&currency=USD"></script>
  <style>
    body {
      font-family: Arial, sans-serif;
      max-width: 700px;
      margin: 40px auto;
      text-align: center;
    }
    h2 {
      margin-bottom: 20px;
    }
    .summary {
      text-align: left;
      background: #f9f9f9;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    .summary ul {
      list-style: none;
      padding: 0;
    }
    .summary li {
      padding: 6px 0;
      border-bottom: 1px solid #ddd;
    }
    .total {
      margin-top: 15px;
      font-weight: bold;
    }
    .payment-button {
      padding: 15px;
      font-size: 16px;
      border: none;
      border-radius: 6px;
      color: white;
      cursor: pointer;
      text-decoration: none;
      margin: 12px 0;
      display: block;
    }
    .stripe-btn { background-color: #6772e5; }
    .square-btn { background-color: #3a86ff; }
    .zelle-btn  { background-color: #28a745; }
  </style>
</head>
<body>

  <h2>Checkout</h2>

  <div class="summary" id="cart-summary">
    <p>Loading your cart...</p>
  </div>

  <div id="paypal-button-container" style="margin: 30px 0;"></div>

  <a id="stripe-link" class="payment-button stripe-btn" target="_blank">Pay with Stripe</a>
  <a id="square-link" class="payment-button square-btn" target="_blank">Pay with Square</a>
  <button class="payment-button zelle-btn" id="zelle-button">Pay with Zelle</button>

  <script>
    // Read cart from localStorage
    const cart = JSON.parse(localStorage.getItem("cart")) || [];
    const summary = document.getElementById("cart-summary");
    const stripeLink = document.getElementById("stripe-link");
    const squareLink = document.getElementById("square-link");
    const zelleBtn = document.getElementById("zelle-button");

    let total = 0;
    let description = "";

    if (cart.length === 0) {
      summary.innerHTML = "<p>Your cart is empty.</p>";
    } else {
      const list = cart.map(item => {
        const subtotal = item.price * item.quantity;
        total += subtotal;
        return `<li>${item.name} x${item.quantity} â€” $${subtotal.toFixed(2)}</li>`;
      }).join("");

      description = cart.map(item => `${item.name} x${item.quantity}`).join(", ");

      summary.innerHTML = `
        <ul>${list}</ul>
        <div class="total">Total: $${total.toFixed(2)}</div>
      `;
    }

    // PayPal Button
    paypal.Buttons({
      createOrder: function(data, actions) {
        return actions.order.create({
          purchase_units: [{
            description: description,
            amount: { value: total.toFixed(2) }
          }]
        });
      },
      onApprove: function(data, actions) {
        return actions.order.capture().then(function(details) {
          alert('Payment completed by ' + details.payer.name.given_name);
          localStorage.removeItem("cart");
        });
      }
    }).render('#paypal-button-container');

    // Stripe/Square Links (static links, dynamic query optional)
    const encodedDescription = encodeURIComponent(description);
    const encodedTotal = total.toFixed(2);

    stripeLink.href = `https://buy.stripe.com/test_YOUR_LINK?desc=${encodedDescription}&amt=${encodedTotal}`;
    squareLink.href = `https://square.link/u/YOUR_SQUARE_LINK?desc=${encodedDescription}&amt=${encodedTotal}`;

    zelleBtn.onclick = () => {
      alert(`Send $${encodedTotal} to zelle@example.com\n\nItems: ${description}`);
    };
  </script>

</body>
</html>
